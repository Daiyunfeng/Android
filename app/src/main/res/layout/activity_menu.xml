<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:toolbar="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_menu"
        toolbar:logo="@mipmap/ic_launcher"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/OverflowMenuStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="随便写写啦啦啦啦啦"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_menu_popupmenu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_menu_popupmenu"/>
        <Button
            android:id="@+id/btn_menu_popupmenu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_menu_popupmenu"/>
        <Button
            android:id="@+id/btn_menu_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_menu_menu"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>